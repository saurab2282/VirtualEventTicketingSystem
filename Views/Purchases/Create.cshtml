
@model Purchase
@{
    ViewBag.Title = "Buy Tickets";
    var events = ViewBag.Events as List<VirtualEventTicketingSystem.Models.Event>;
}

<h2>Buy Tickets</h2>

<form asp-action="Create" method="post">
    <div class="form-group">
        <label for="GuestName">Name</label>
        <input asp-for="GuestName" class="form-control" required />
    </div>
    <div class="form-group">
        <label for="GuestEmail">Email</label>
        <input asp-for="GuestEmail" class="form-control" type="email" required />
    </div>

    <h4>Select Events</h4>
    <table class="table">
        <thead>
            <tr>
                <th>Event</th>
                <th>Date</th>
                <th>Price</th>
                <th>Available</th>
                <th>Select</th>
                <th>Quantity</th>
            </tr>
        </thead>
        <tbody>
        @for (int i = 0; i < events.Count; i++)
        {
            var ev = events[i];
            <tr>
                <td>@ev.Title</td>
                <td>@ev.EventDate.ToString("MMM dd, yyyy")</td>
                <td>@ev.TicketPrice.ToString("C")</td>
                <td>@ev.AvailableTickets</td>
                <td>
                    <input type="checkbox" class="event-checkbox" data-index="@i" />
                    <!-- hidden eventId input (disabled by default, enabled if checked) -->
                    <input type="hidden" name="eventIds" value="@ev.Id" disabled />
                </td>
                <td>
                    <input type="number" name="quantities" min="1" max="@ev.AvailableTickets"
                           value="1" class="form-control quantity-input" disabled />
                </td>
            </tr>
        }
        </tbody>
    </table>

    <button type="submit" class="btn btn-primary">Continue to Confirmation</button>
</form>

@section Scripts {
    <script>
        document.querySelectorAll('.event-checkbox').forEach(cb => {
            cb.addEventListener('change', () => {
                const row = cb.closest('tr');
                const qty = row.querySelector('.quantity-input');
                const eventId = row.querySelector('input[name="eventIds"]');
                const enabled = cb.checked;
                qty.disabled = !enabled;
                eventId.disabled = !enabled;
            });
        });
    </script>
}
