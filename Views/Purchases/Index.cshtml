@model IEnumerable<Purchase>
@{
    ViewData["Title"] = "Purchase History";
}

<table class="table table-striped mt-4">
    <thead>
    <tr>
        <th>Date</th>
        <th>Name</th>
        <th>Email</th>
        <th>Events</th>
        <th>Total</th>
        <th>Actions</th>
    </tr>
    </thead>
    <tbody>
    @foreach (var purchase in Model)
    {
        <tr>
            <td>@purchase.PurchaseDate.ToLocalTime().ToString("g")</td>
            <td>@purchase.GuestName</td>
            <td>@purchase.GuestEmail</td>
            <td>
                <ul class="list-unstyled">
                    @foreach (var ep in purchase.EventPurchases)
                    {
                        <li>@ep.Event.Title (x@ep.Quantity)</li>
                    }
                </ul>
            </td>
            <td>@purchase.TotalCost.ToString("C")</td>
            <td>
                <form asp-action="Delete" asp-route-id="@purchase.PurchaseId" method="post" onsubmit="return confirm('Are you sure you want to delete this purchase and restore tickets?');">
                    <a asp-action="Delete" asp-route-id="@purchase.PurchaseId" class="btn btn-sm btn-danger">Delete</a>
                </form>
            </td>
        </tr>
    }
    </tbody>
</table>