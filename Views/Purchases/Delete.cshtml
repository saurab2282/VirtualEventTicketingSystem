@model VirtualEventTicketingSystem.Models.Purchase

@{
    ViewData["Title"] = "Delete Purchase";
}

<div class="container mt-4">
    <h2 class="text-danger">Delete Purchase</h2>
    <p>Are you sure you want to delete this purchase? This action will also restore the tickets to the related events.</p>

    <div class="card mt-4">
        <div class="card-body">
            <h4 class="card-title">@Model.GuestName (@Model.GuestEmail)</h4>
            <p><strong>Purchase Date:</strong> @Model.PurchaseDate.ToLocalTime().ToString("f")</p>
            <p><strong>Total Cost:</strong> @Model.TotalCost.ToString("C")</p>

            @if (Model.EventPurchases != null && Model.EventPurchases.Any())
            {
                <h5>Events:</h5>
                <ul class="list-group mb-3">
                    @foreach (var ep in Model.EventPurchases)
                    {
                        <li class="list-group-item d-flex justify-content-between">
                            <span>@ep.Event?.Title (x@ep.Quantity)</span>
                            <span>@(ep.Event?.TicketPrice * ep.Quantity).ToString("C")</span>
                        </li>
                    }
                </ul>
            }
        </div>
    </div>

    <form asp-action="DeleteConfirmed" asp-route-id="@Model.PurchaseId" method="post" class="mt-3">
        <button type="submit" class="btn btn-danger">Confirm Delete</button>
        <a asp-action="Index" class="btn btn-secondary">Cancel</a>
    </form>
</div>