@using Microsoft.AspNetCore.Identity
@inject SignInManager<AppUser> SignInManager
@inject UserManager<AppUser> UserManager

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Virtual Event Ticketing System</title>

    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" />
    <link rel="stylesheet" href="~/css/site.css" />
</head>
<body>
<nav class="navbar navbar-expand-lg navbar-dark bg-dark shadow-sm">
    <div class="container">
        <a class="navbar-brand fw-bold" asp-controller="Home" asp-action="Index">
            🎫 Virtual Ticketing
        </a>

        <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav">
            <span class="navbar-toggler-icon"></span>
        </button>

        <div class="collapse navbar-collapse" id="navbarNav">
            <ul class="navbar-nav ms-auto">
                <!-- Always visible -->
                <li class="nav-item"><a class="nav-link" asp-controller="Home" asp-action="Index">Home</a></li>
                <li class="nav-item"><a class="nav-link" asp-controller="Events" asp-action="Index">Events</a></li>
                <li class="nav-item">
                    <a class="nav-link" asp-controller="Cart" asp-action="Index">
                        Cart <span id="cartCount" class="badge bg-danger">@ViewBag.CartCount</span>
                    </a>
                </li>
                @* Links for all authenticated users *@
                @if (SignInManager.IsSignedIn(User))
                {
                    <li class="nav-item"><a class="nav-link" asp-controller="Dashboard" asp-action="Index">Dashboard</a></li>
                    <li class="nav-item"><a class="nav-link" asp-controller="Purchases" asp-action="Index">My Purchases</a></li>
                }

                @* Organizer dropdown menu *@
                @if (User.IsInRole("Organizer"))
                {
                    <li class="nav-item dropdown">
                        <a class="nav-link dropdown-toggle" href="#" id="organizerDropdown" role="button" data-bs-toggle="dropdown">
                            Organizer
                        </a>
                        <ul class="dropdown-menu dropdown-menu-end" aria-labelledby="organizerDropdown">
                            <li><a class="dropdown-item" asp-controller="Events" asp-action="MyEvents">My Events</a></li>
                            <li><a class="dropdown-item" asp-controller="Events" asp-action="Create">Create Event</a></li>
                            <li><a class="dropdown-item" asp-controller="Analytics" asp-action="MyAnalytics">Analytics Dashboard</a></li>
                        </ul>
                    </li>
                }

                @* Admin dropdown menu *@
                @if (User.IsInRole("Admin"))
                {
                    <li class="nav-item dropdown">
                        <a class="nav-link dropdown-toggle" href="#" id="adminDropdown" role="button" data-bs-toggle="dropdown">
                            Admin Panel
                        </a>
                        <ul class="dropdown-menu dropdown-menu-end" aria-labelledby="adminDropdown">
                            <li><a class="dropdown-item" asp-controller="Admin" asp-action="Index">Dashboard</a></li>
                            <li><a class="dropdown-item" asp-controller="Users" asp-action="Index">User Management</a></li>
                            <li><a class="dropdown-item" asp-controller="Categories" asp-action="Index">Categories</a></li>
                            <li><a class="dropdown-item" asp-controller="Events" asp-action="Index">All Events</a></li>
                            <li><hr class="dropdown-divider" /></li>
                            <li><a class="dropdown-item" asp-controller="Analytics" asp-action="MyAnalytics">Analytics Dashboard</a></li>
                        </ul>
                    </li>
                }

                @* Authentication links *@
                @if (SignInManager.IsSignedIn(User))
                {
                    <li class="nav-item dropdown">
                        <a class="nav-link dropdown-toggle" href="#" id="userDropdown" role="button" data-bs-toggle="dropdown">
                            Hello, @User.Identity.Name
                        </a>
                        <ul class="dropdown-menu dropdown-menu-end" aria-labelledby="userDropdown">
                            <li>
                                <form method="post" asp-area="Identity" asp-page="/Account/Logout">
                                    <button type="submit" class="dropdown-item">Logout</button>
                                </form>
                            </li>
                        </ul>
                    </li>
                }
                else
                {
                    <li class="nav-item"><a class="nav-link" asp-area="Identity" asp-page="/Account/Login">Login</a></li>
                    <li class="nav-item"><a class="nav-link" asp-area="Identity" asp-page="/Account/Register">Register</a></li>
                }
            </ul>
        </div>
    </div>
</nav>

<div class="container mt-4 mb-5">
    <main role="main" class="pb-3">
        @RenderBody()
    </main>
</div>

<footer class="footer bg-dark text-white text-center py-3 mt-auto">
    <small>
        © 2025 Virtual Event Ticketing System — Built by 
        <b>Vincenzo Iori, Saurad Khatri, and Aanod Mohamed</b>
    </small>
</footer>

<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
@RenderSection("Scripts", required: false)
</body>
</html>